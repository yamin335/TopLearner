<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MoreFragmentBinding">

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.more.MoreFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/customToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/themeBackgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/engineers_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/actionBarDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customToolbar"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rivProfileImage"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/doctor_1"
                        android:contentDescription="@string/default_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/rivProfileImage"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:id="@+id/tvPackageLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Package: "
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tvPackage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="CRS-10"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_toEndOf="@+id/tvPackageLabel"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:id="@+id/tvSIDLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SID: "
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tvSID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="01789898798"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_toEndOf="@+id/tvSIDLabel"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:id="@+id/tvValidDateLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valid Date: "
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tvValidDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="January 22, 2021"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:layout_toEndOf="@+id/tvValidDateLabel"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Jahangir Alam"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginTop="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:id="@+id/tvClassLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class: "
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/tvClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Class IV"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@+id/tvClassLabel"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow1"/>
                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow3"/>
                        <ImageView
                            android:id="@+id/arrow3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mNoticeBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notice Board"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow4"/>
                        <ImageView
                            android:id="@+id/arrow4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Offer"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow5"/>
                        <ImageView
                            android:id="@+id/arrow5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mECode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-Code"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow6"/>
                        <ImageView
                            android:id="@+id/arrow6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mYoutube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Youtube"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow7"/>
                        <ImageView
                            android:id="@+id/arrow7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Facebook"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow8"/>
                        <ImageView
                            android:id="@+id/arrow8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow9"/>
                        <ImageView
                            android:id="@+id/arrow9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/mAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="12dp"
                    app:contentPaddingBottom="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/arrow2"/>
                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:tint="@color/grayColor"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                <View
                    android:background="?android:attr/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    app:rippleColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textColor="@color/grayColor"
                    android:windowSoftInputMode="adjustResize"
                    android:textAllCaps="false"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="#f2f2f2"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>